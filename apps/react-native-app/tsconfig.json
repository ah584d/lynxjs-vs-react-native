{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@repo/constants": ["../../libs/constants/src/index.ts"]
