{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
