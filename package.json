{
  "name": "lynxjs-vs-react-native-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "pnpm run --filter='./libs/*' build && pnpm run --filter='./apps/*' build",
    "dev:lynxjs": "pnpm run --filter=@repo/lynxjs-app dev",
    "dev:rn": "pnpm run --filter=@repo/react-native-app dev",
    "dev:expo": "pnpm run --filter=@repo/expo-app dev",
    "lint": "pnpm run -r lint",
    "clean:modules": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "ci": "pnpm run clean:modules && pnpm install",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "dotenv": "^16.4.7",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.18"
    }
  },
  "packageManager": "pnpm@9.0.0"
}
